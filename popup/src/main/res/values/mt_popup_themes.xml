<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    没有actionBar-->
    <style name="MTPopup.Compat.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <!--    深色actionBar-->
    <style name="MTPopup.Compat.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <!--  DialogActivity主题  -->
    <style name="MTPopupDialogActivityTheme" parent="MTPopup.Dialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowAnimationStyle">@style/ActivityEnter0Exit0Animation</item>
    </style>

    <!-- 自定义DialogActivity动画 等同于overridePendingTransition(0,0)-->
    <style name="ActivityEnter0Exit0Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>
</resources>